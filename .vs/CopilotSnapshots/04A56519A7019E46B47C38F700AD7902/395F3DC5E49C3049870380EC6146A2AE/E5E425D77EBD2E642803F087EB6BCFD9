using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Configuration;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.Data.SqlClient;

namespace Hotel_Wednesday
{
    public partial class SIGN_UP : Form
    {
        public SIGN_UP()
        {
            InitializeComponent();
        }

        public static string connString = ConfigurationManager.ConnectionStrings["Hotel"].ConnectionString;
        SqlConnection con = new SqlConnection(connString);

        private void button5_Click(object sender, EventArgs e)
        {
            this.Close();
            Login lg = new Login();
            lg.Show();
        }

        private void button1_Click(object sender, EventArgs e)
        {
            try
            {
                if (textBox1.Text == "" && textBox6.Text == "" && textBox2.Text == "")
                {
                    MessageBox.Show("Please complete all the fields!");
                }
                else
                {
                    string query = "INSERT INTO HOTEL_USERSs (User_FirstName, User_LastName, User_Password) VALUES (@first, @last, @pass)";
                    con.Open();
                    SqlCommand cmd = new SqlCommand(query, con);
                    cmd.Parameters.AddWithValue("@first", textBox1.Text);
                    cmd.Parameters.AddWithValue("@last", textBox6.Text);

                    // Hash password using BCrypt
                    string password = textBox2.Text;
                    string hashed = BCrypt.Net.BCrypt.HashPassword(password);

                    cmd.Parameters.AddWithValue("@pass", hashed);

                    cmd.ExecuteNonQuery();
                    con.Close();

                    MessageBox.Show("Account created successfully");
                    textBox1.Text = "";
                    textBox6.Text = "";
                    textBox2.Text = "";
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error: " + ex.Message);
            }
        }

        private void SIGN_UP_Load(object sender, EventArgs e)
        {

        }
    }
}
